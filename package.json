{
  "name": "ecotn",
  "version": "1.0.0",
  "description": "Progetto EcoTn del corso di Ingegneria del Software, UniTrento.",
  "main": "index.js",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "start": "node index.js",
    "dev": "node -r dotenv/config index.js",
    "dev:watch": "nodemon index.js",
    "test": "jest --setupFiles dotenv/config",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SimoGuu/EcoTn.git"
  },
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.6",
    "dotenv": "^17.2.4",
    "express": "^5.1.0",
    "express-session": "^1.19.0",
    "express-static": "^1.2.6",
    "mongoose": "^9.1.6"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "nodemon": "^3.0.0",
    "supertest": "^7.2.2"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/app/controllers/**/*.js",
      "!src/app/controllers/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 75,
        "branches": 50,
        "functions": 75,
        "lines": 70
      }
    }
  }
}
